# Enhanced Environment Configuration for SkinTwin FormX
# This file provides a comprehensive template for all environment variables

# ==================== CORE APPLICATION SETTINGS ====================

# Application Mode
VITE_SINGLE_USER_MODE=true
VITE_USE_LOCAL_PREVIEW=true
VITE_DISABLE_CLOUDFLARE=true

# Logging Configuration
VITE_LOG_LEVEL=info

# ==================== AI PROVIDER CONFIGURATION ====================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096

# Google Gemini Configuration
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro
GOOGLE_MAX_TOKENS=4096

# Groq Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768

# Ollama Configuration (Local AI)
OLLAMA_API_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama2

# Additional AI Providers
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
OPEN_ROUTER_API_KEY=your_openrouter_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
TOGETHER_API_KEY=your_together_api_key_here
XAI_API_KEY=your_xai_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ==================== DATABASE CONFIGURATION ====================

# Primary Database URL (can be Supabase or Neon)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_PROJECT_ID=your_supabase_project_id

# Neon Configuration
NEON_DATABASE_URL=postgresql://username:password@hostname:port/database
NEON_PROJECT_ID=your_neon_project_id
NEON_BRANCH_ID=your_neon_branch_id
NEON_API_KEY=your_neon_api_key_here

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=5000

# ==================== GITHUB INTEGRATION ====================

# GitHub Configuration
VITE_GITHUB_ACCESS_TOKEN=your_github_token_here
VITE_GITHUB_TOKEN_TYPE=classic
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# ==================== AWS BEDROCK CONFIGURATION ====================

# AWS Bedrock Configuration
AWS_BEDROCK_CONFIG={"region": "us-east-1", "accessKeyId": "your_key", "secretAccessKey": "your_secret"}
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ==================== SECURITY SETTINGS ====================

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=604800000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# ==================== PERFORMANCE SETTINGS ====================

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================== MONITORING AND ANALYTICS ====================

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# ==================== EXTERNAL SERVICES ====================

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@skintwin.com

# File Storage
S3_BUCKET=your-s3-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# CDN Configuration
CDN_URL=https://cdn.skintwin.com
CDN_API_KEY=your_cdn_api_key

# ==================== DEVELOPMENT SETTINGS ====================

# Development Tools
VITE_DEV_TOOLS=true
VITE_MOCK_API=false
VITE_DEBUG_MODE=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/skintwin_test
TEST_TIMEOUT=30000

# ==================== PRODUCTION OVERRIDES ====================

# Production Database (uncomment for production)
# DATABASE_URL=postgresql://prod_user:prod_pass@prod_host:5432/skintwin_prod

# Production Security (uncomment for production)
# NODE_ENV=production
# VITE_SINGLE_USER_MODE=false
# VITE_USE_LOCAL_PREVIEW=false
# VITE_DISABLE_CLOUDFLARE=false

# ==================== FEATURE FLAGS ====================

# Experimental Features
VITE_ENABLE_HYPERGRAPH=true
VITE_ENABLE_AI_FORMULATION=true
VITE_ENABLE_BATCH_PROCESSING=true
VITE_ENABLE_REGULATORY_COMPLIANCE=true
VITE_ENABLE_SUPPLIER_INTEGRATION=true

# UI Features
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ADVANCED_CHARTS=true
VITE_ENABLE_EXPORT_FEATURES=true

# ==================== CUSTOM INTEGRATIONS ====================

# Custom API Endpoints
CUSTOM_API_BASE_URL=https://api.custom-service.com
CUSTOM_API_KEY=your_custom_api_key

# Webhook URLs
WEBHOOK_FORMULATION_CREATED=https://your-app.com/webhooks/formulation-created
WEBHOOK_BATCH_COMPLETED=https://your-app.com/webhooks/batch-completed

# ==================== NOTES ====================

# 1. Replace all placeholder values with actual credentials
# 2. Never commit this file with real credentials to version control
# 3. Use environment-specific files (.env.local, .env.production, etc.)
# 4. Ensure all team members have access to the required credentials
# 5. Regularly rotate API keys and secrets for security
# 6. Use a secrets management service in production environments
